---
import Layout from "../layouts/Layout.astro";

const projects = [
  {
    title: "Sample Project",
    slug: "sample-project",
    summary: "Brief description of the problem, approach, and impact.",
    tags: ["Python", "ETL"],
  },
  {
    title: "Sales Dashboard",
    slug: "sales-dashboard",
    summary: "Power BI dashboard to track revenue and KPIs.",
    tags: ["Power BI", "Dashboard"],
  },
  {
    title: "Automation Script",
    slug: "automation-script",
    summary: "Python automation to reduce manual work.",
    tags: ["Python", "Automation"],
  },
];
---
<Layout title="Projects â€” Portfolio">
  <h1 class="text-2xl md:text-3xl font-bold mb-6">Projects</h1>
  <div class="grid gap-6 md:grid-cols-2">
    {projects.map((p) => (
      <a href={`/projects/${p.slug}`} class="block rounded-lg border p-5 hover:border-sky-300 dark:hover:border-sky-700">
        <h2 class="font-semibold">{p.title}</h2>
        <p class="text-sm text-slate-600 dark:text-slate-400">{p.summary}</p>
        <div class="mt-3 flex flex-wrap gap-2">
          {p.tags.map((t) => (
            <span class="text-xs rounded-full bg-slate-100 dark:bg-slate-800 px-2 py-1">{t}</span>
          ))}
        </div>
      </a>
    ))}
  </div>
</Layout>


